{
  "name": "snpt",
  "version": "0.1.0",
  "description": "✂️A simple snippets app.",
  "author": "Chetan Raj <chetan.narian@gmail.com> (https://chetanraj.in/)",
  "repository": "https://github.com/chetanraj/snpt",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@sentry/browser": "5.11.0",
    "node-sass": "4.13.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.3.0",
    "styled-components": "4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.3",
    "@testing-library/react": "10.0.3",
    "bundlesize": "0.18.0",
    "expect": "24.9.0",
    "husky": "4.0.6",
    "lint-staged": "8.2.1",
    "prettier": "2.0.5",
    "prism-react-renderer": "1.0.2",
    "react-prism": "4.3.2",
    "stylelint": "12.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test:size": "bundlesize",
    "test:snpt": "react-scripts test --watchAll --coverage",
    "test:snpt:ci": "react-scripts test --no-watch --watch=false --watchAll=false --no-watchman --forceExit",
    "eject": "react-scripts eject",
    "prettify": "prettier --write '**/*.js'",
    "stylelint": "stylelint --fix '**/*.scss'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint '**/*.scss' --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
